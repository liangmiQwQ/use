{
  /* Visuals */
  // Fonts
  "editor.fontSize": 15,
  "editor.fontFamily": "Monaspace Neon, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'ss07', 'calt'",
  "editor.linkedEditing": true,
  "workbench.fontAliasing": "antialiased",
  "terminal.integrated.fontSize": 14,
  // Cursor
  "workbench.list.smoothScrolling": true,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "smooth",
  // Theme
  "window.autoDetectColorScheme": true,
  "workbench.preferredLightColorTheme": "Moegi Light",
  "workbench.preferredDarkColorTheme": "Moegi Dark Vitesse",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  // Icons
  "workbench.iconTheme": "catppuccin-macchiato",
  // Windows
  "window.nativeTabs": true,
  "window.title": "${rootName}",
  "window.titleBarStyle": "custom",
  // Miscellaneous
  "workbench.startupEditor": "terminal",
  "editor.lineNumbers": "interval",
  "editor.guides.bracketPairs": "active",
  "editor.renderWhitespace": "boundary",
  "editor.minimap.enabled": false,
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "top",
  "window.customTitleBarVisibility": "never",

  /* Editor */
  // Code
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "files.eol": "\n",
  "files.autoSave": "onWindowChange",
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "never"
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  // Git
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.untrackedChanges": "separate",
  "githubPullRequests.createOnPublishBranch": "never",
  "git.openRepositoryInParentFolders": "never",
  // Display
  "editor.unicodeHighlight.invisibleCharacters": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "explorer.confirmDelete": false,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "[markdown]": {
    // enable word wrap for markdown
    "editor.wordWrap": "on"
  },
  "[mdc]": {
    "editor.wordWrap": "on"
  },

  "editor.wordWrap": "off",
  // Workbench
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 5,
  "workbench.settings.editor": "json",
  // Terminal
  "terminal.integrated.defaultProfile.osx": "fish",

  /* Extension */
  // Global
  "extensions.autoUpdate": "onlyEnabledExtensions",

  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": false,
  "errorLens.enabledDiagnosticLevels": ["warning", "error"],
  "errorLens.excludeBySource": ["cSpell", "Grammarly", "eslint"],

  "eslint.codeAction.showDocumentation": {
    "enable": true
  },

  // Silent the stylistic rules in you IDE, but still auto fix them
  "eslint.rules.customizations": [
    { "rule": "style/*", "severity": "off" },
    { "rule": "format/*", "severity": "off" },
    { "rule": "*-indent", "severity": "off" },
    { "rule": "*-spacing", "severity": "off" },
    { "rule": "*-spaces", "severity": "off" },
    { "rule": "*-order", "severity": "off" },
    { "rule": "*-dangle", "severity": "off" },
    { "rule": "*-newline", "severity": "off" },
    { "rule": "*quotes", "severity": "off" },
    { "rule": "*semi", "severity": "off" }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml"
  ],
  "oxc.requireConfig": true,

  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },

  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.cargo.features": "all",
  "rust-analyzer.cargo.allTargets": false,
  "rust-analyzer.check.allTargets": false,

  "files.associations": {
    "*.mld": "json"
  },

  "hediet.vscode-drawio.resizeImages": null,

  "projectManager.git.baseFolders": ["~/code"],
  "projectManager.sortList": "Recent",

  "liveServer.settings.donotShowInfoMsg": true,

  "notebook.defaultFormatter": "vscode.markdown-language-features",
  "editor.gotoLocation.multipleDefinitions": "gotoAndPeek",

  "docker.extension.dockerEngineAvailabilityPrompt": false,
  "mdb.mcp.server": "prompt",
  "github.copilot.enable": {
    "*": true,
    "mdc": false
  },
  "git.ignoreRebaseWarning": true,
  "svelte.enable-ts-plugin": true,
  "chatgpt.cliExecutable": "/Users/liangmi/code/ai-setup/codex",
  "rust-analyzer.runnables.askBeforeUpdateTest": false,
  "json.schemaDownload.enable": true,
  "extensions.ignoreRecommendations": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "claudeCode.preferredLocation": "panel",
  "git.enableCommitSigning": true
}
